{
    "name": "durasj/laser-profile",
    "description": "Laser Profile",
    "homepage": "https://lasergame.app",
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "Jakub Duras",
            "email": "jakub@duras.me",
            "homepage": "https://duras.me/"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "slim/csrf": "^0.8.3",
        "tuupola/slim-jwt-auth": "^2.4",
        "illuminate/database": "~5.8.2",
        "slim/flash": "^0.4.0",
        "boronczyk/localization-middleware": "^1.4",
        "robmorgan/phinx": "^0.10.6",
        "fzaninotto/faker": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Models\\": "src/models/",
            "Controllers\\": "src/controllers/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "phinx": "bash vendor/bin/phinx"
    }

}
